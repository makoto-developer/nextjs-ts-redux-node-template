    "fdev": "yarn ws frontend dev",
    "bdev": "yarn ws backend dev",
    "build": "yarn ws frontend build",
    "lint": "eslint && stylelint **/*.scss --mw 0",
    "lint-fix": "eslint ./ --fix",
