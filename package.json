{
  "name": "frontend",
  "scripts": {
    "ws": "yarn workspace",
    "fdev": "yarn ws frontend dev",
    "bdev": "yarn ws backend dev",
    "build": "yarn ws frontend build",
    "lint": "eslint && stylelint **/*.scss --mw 0",
    "lint-fix": "eslint ./ --fix",
    "lint-style-fix": "stylelint **/*.scss --fix",
    "export": "yarn ws frontend next export",
    "refresh": "rm -rf node_modules backend/node_modules frontend/node_modules ./dist",
    "storybook": "yarn ws storybook start"
  },
  "workspaces": [
    "frontend",
    "backend",
    "types",
    "tools"
  ],
  "private": true,
  "version": "0.0.0",
  "packageManager": "yarn@3.1.1",
  "engines": {
    "node": ">= 18"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "typescript-plugin-css-modules": "5.0.1",
    "eslint": "8.49.0",
    "eslint-config-next": "13.4.19",
    "eslint-plugin-destructuring-newline": "0.1.1",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-import-newlines": "1.3.4",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "postcss": "8.4.29",
    "postcss-scss": "4.0.8",
    "stylelint": "15.10.3",
    "stylelint-config-recommended": "13.0.0",
    "stylelint-order": "6.0.3",
    "stylelint-scss": "5.1.0",
    "typescript": "5.2.2"
  }
}
